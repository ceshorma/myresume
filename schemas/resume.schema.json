{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cesarh.dev/schemas/resume.schema.json",
  "title": "Resume data schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["defaultLanguage", "languages"],
  "properties": {
    "defaultLanguage": {
      "type": "string",
      "description": "Código del idioma que se carga por defecto."
    },
    "languages": {
      "type": "object",
      "minProperties": 1,
      "description": "Listado de idiomas disponibles indexados por su código (es, en, pt, etc).",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]{2,5}(?:-[A-Za-z0-9]+)*$": {
          "$ref": "#/$defs/language"
        }
      }
    }
  },
  "$defs": {
    "language": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "language",
        "locale",
        "metaTitle",
        "identity",
        "contact",
        "sections",
        "lastUpdate",
        "aria",
        "actions"
      ],
      "properties": {
        "language": {
          "type": "object",
          "additionalProperties": false,
          "required": ["code", "label", "shortLabel"],
          "properties": {
            "code": {
              "type": "string",
              "pattern": "^[a-z]{2,5}(?:-[A-Za-z0-9]+)*$",
              "description": "Código del idioma en formato IETF (por ejemplo es, en-US)."
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "shortLabel": {
              "type": "string",
              "minLength": 1,
              "maxLength": 6
            }
          }
        },
        "locale": {
          "type": "string",
          "minLength": 2,
          "description": "Locale usado para formato de fechas (ej. es, en-US)."
        },
        "metaTitle": {
          "type": "string",
          "minLength": 1
        },
        "identity": {
          "type": "object",
          "additionalProperties": false,
          "required": ["intro", "name", "role", "summary"],
          "properties": {
            "intro": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "role": {
              "type": "string",
              "minLength": 1
            },
            "summary": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "contact": {
          "type": "object",
          "additionalProperties": false,
          "required": ["email", "links"],
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "links": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/contactLink"
              }
            },
            "download": {
              "$ref": "#/$defs/downloadAction"
            }
          }
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/section"
          }
        },
        "lastUpdate": {
          "type": "string",
          "minLength": 1
        },
        "aria": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nav", "languageSwitcher", "email"],
          "properties": {
            "nav": {
              "type": "string",
              "minLength": 1
            },
            "languageSwitcher": {
              "type": "string",
              "minLength": 1
            },
            "email": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "actions": {
          "type": "object",
          "additionalProperties": false,
          "required": ["backToTop"],
          "properties": {
            "backToTop": {
              "$ref": "#/$defs/backToTopAction"
            }
          }
        }
      }
    },
    "contactLink": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "url"],
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "ariaLabel": {
          "type": "string",
          "minLength": 1
        },
        "icon": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Slug de icono registrado en SOCIAL_ICON_MAP."
        }
      }
    },
    "downloadAction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "ariaLabel", "tooltip", "url", "filename"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "ariaLabel": { "type": "string", "minLength": 1 },
        "tooltip": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri-reference" },
        "filename": { "type": "string", "minLength": 1 }
      }
    },
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "number", "title", "navLabel", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "number": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "navLabel": { "type": "string", "minLength": 1 },
        "type": {
          "type": "string",
          "enum": ["about", "timeline", "projects", "contact"]
        },
        "paragraphs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "skills": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "items": {
          "type": "array"
        },
        "cta": { "$ref": "#/$defs/cta" }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "about" } } },
          "then": {
            "required": ["paragraphs", "skills"],
            "properties": {
              "paragraphs": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "skills": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "timeline" } } },
          "then": {
            "required": ["items"],
            "properties": {
              "items": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/$defs/timelineItem" }
              }
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "projects" } } },
          "then": {
            "required": ["items"],
            "properties": {
              "items": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/$defs/project" }
              }
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "contact" } } },
          "then": {
            "required": ["paragraphs"],
            "properties": {
              "paragraphs": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "cta": { "$ref": "#/$defs/cta" }
            }
          }
        }
      ]
    },
    "timelineItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["role", "period", "achievements"],
      "properties": {
        "role": { "type": "string", "minLength": 1 },
        "period": { "type": "string", "minLength": 1 },
        "achievements": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "label", "description", "stack"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "stack": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "links": {
          "type": "array",
          "items": { "$ref": "#/$defs/projectLink" }
        },
        "image": {
          "$ref": "#/$defs/projectImage"
        }
      }
    },
    "projectLink": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "url"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" },
        "ariaLabel": { "type": "string", "minLength": 1 }
      }
    },
    "projectImage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["src", "alt"],
      "properties": {
        "src": { "type": "string", "format": "uri-reference" },
        "alt": { "type": "string", "minLength": 1 },
        "caption": { "type": "string", "minLength": 1 }
      }
    },
    "cta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "url"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "backToTopAction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "ariaLabel", "tooltip", "shortLabel"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "ariaLabel": { "type": "string", "minLength": 1 },
        "tooltip": { "type": "string", "minLength": 1 },
        "shortLabel": { "type": "string", "minLength": 1 }
      }
    }
  }
}
